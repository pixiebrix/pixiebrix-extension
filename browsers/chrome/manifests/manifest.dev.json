{
  "manifest_version": 2,
  "name": "PixieBrix WebApp Integrator",
  "short_name": "PixieBrix",
  "minimum_chrome_version": "42.0",
  "version": "0.0.18",
  "description": "PixieBrix - integrate your favorite web applications without code",
  "icons": {
    "16": "icons/logo16.png",
    "48": "icons/logo48.png",
    "128": "icons/logo128.png"
  },
  "content_security_policy": "script-src 'self' https://apis.google.com/; object-src 'self'",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "oauth2": {
    "client_id": "676864882630-itlagqshtp6afem7rj98mk8a9b63osf3.apps.googleusercontent.com",
    "scopes":[""]
  },
  "optional_permissions": [
    "notifications",
    "clipboardWrite",
    "https://*/",
    "http://*/"
  ],
  "permissions": [
    "storage",
    "identity",
    "tabs",
    "webNavigation"
  ],
  "externally_connectable":  {
    "matches": [
      "https://app.pixiebrix.com/*",
      "https://pixiebrix-staging.herokuapp.com/*",
      "http://127.0.0.1/*"
    ]
  },
  "web_accessible_resources": [
    "options.html",
    "background.html",
    "frame.html",
    "script.js",
    "background.js"
  ],
  "background": {
    "page": "background.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
